<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd


		 http://www.springframework.org/schema/context  
               http://www.springframework.org/schema/context/spring-context-4.0.xsd">
    <import resource="classpath:applicationContext.xml"/>
    <context:component-scan base-package="cn.cityre.mis.**.service"/>
    <!--<context:component-scan base-package="cn.cityre.mis.**.dao"/>-->

    <!--dao与Mapper文件映射，，，-->
    <bean class="org.mybatis.spring.mapper.MapperScannerConfigurer">
        <property name="basePackage" value="cn.cityre.mis.core.*.dao"/>
        <property name="sqlSessionFactoryBeanName" value="sqlSessionFactoryCore"/>
    </bean>
    <!--dao与Mapper文件映射，，，-->
    <bean class="org.mybatis.spring.mapper.MapperScannerConfigurer">
        <property name="basePackage" value="cn.cityre.mis.city.*.dao"/>
        <property name="sqlSessionFactoryBeanName" value="sqlSessionFactoryCity"/>
    </bean>

    <!--dao与Mapper文件映射，，，-->
    <bean class="org.mybatis.spring.mapper.MapperScannerConfigurer">
        <property name="basePackage" value="cn.cityre.mis.center.*.dao"/>
        <property name="sqlSessionFactoryBeanName" value="sqlSessionFactoryCenter"/>
    </bean>

    <!--dao与Mapper文件映射，，，-->
    <bean class="org.mybatis.spring.mapper.MapperScannerConfigurer">
        <property name="basePackage" value="cn.cityre.mis.account.*.dao"/>
        <property name="sqlSessionFactoryBeanName" value="sqlSessionFactoryAccount"/>
    </bean>

    <!--dao与Mapper文件映射，，，-->
    <bean class="org.mybatis.spring.mapper.MapperScannerConfigurer">
        <property name="basePackage" value="cn.cityre.mis.cityreaccount.*.dao"/>
        <property name="sqlSessionFactoryBeanName" value="sqlSessionFactoryCityreaccount"/>
    </bean>
</beans>